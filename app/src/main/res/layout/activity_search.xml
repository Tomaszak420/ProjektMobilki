<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434343"
    tools:context=".SearchActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/location_text"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timezone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/timezone_label"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/timezone_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/utc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/utc_label"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/utc_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_label"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/address_prompt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/address_prompt_label"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/search_address_input"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="text"
        android:text="Warsaw"
        android:textSize="24sp" />

    <Button
        android:id="@+id/search_address_button"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="@string/search_button"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LUB"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Podaj współrzędne geograficzne:"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/longitude_input"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:text="Dlugosc"
        android:layout_marginTop="12dp"
        android:inputType="numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/latitude_input"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:text="Szerokosc"
        android:layout_marginTop="12dp"
        android:inputType="numberDecimal|numberSigned"/>

    <Button
        android:id="@+id/search_coordinates_button"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/button_go_search"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="12dp"/>
</LinearLayout>